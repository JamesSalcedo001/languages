              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Calculations"
        ],
        "description": "Update a calculation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Calculation ID"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Updated calculation details",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstOperand": {
                  "type": "number",
                  "example": 20
                },
                "operator": {
                  "type": "string",
