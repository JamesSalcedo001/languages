                  "type": "number",
                  "example": 1
                },
                "firstOperand": {
                  "type": "number",
                  "example": 20
                },
                "operator": {
                  "type": "string",
                  "example": "-"
                },
                "secondOperand": {
                  "type": "number",
                  "example": 5
                },
                "result": {
                  "type": "number",
                  "example": 15
                },
                "createdAt": {
                  "type": "string",
                  "example": "2023-10-20T12:00:00Z"
                },
                "updatedAt": {
                  "type": "string",
                  "example": "2023-10-20T12:05:00Z"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "tags": [
          "Calculations"
        ],
        "description": "Delete a calculation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Calculation ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Calculation deleted successfully"
          },
          "404": {
            "description": "Not Found"
          },
